<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_progress"
    android:padding="32dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حاسبة المعدل الجامعي"
        android:textColor="@color/primary_progress"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnSemester1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الفصل الأول"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary_progress"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnSemester2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الفصل الثاني"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary_progress"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnOverall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="النتائج السنوية"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/accent_progress"
        android:padding="16dp"/>
</LinearLayout>