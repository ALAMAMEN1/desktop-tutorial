<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_card"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_circle"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نظام الحضور الذكي"
            android:textSize="20sp"
            android:textColor="#0d47a1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="يرجى اختيار أحد الخيارات للمتابعة"
            android:textSize="14sp"
            android:textColor="#5F6368"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="مسح الكود"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#34A853"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnStudentInfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="عرض معلومات الطالب"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#0d47a1"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© نظام إدارة الحضور 2025"
            android:textSize="12sp"
            android:textColor="#B0BEC5"
            android:gravity="center"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
